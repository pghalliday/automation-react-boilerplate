{
  "database": {
    "rules": "database.rules.bolt"
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/functions/*",
        "function": "functions"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
